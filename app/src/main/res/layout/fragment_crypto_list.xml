<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutDefaultHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivExchangeLogo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/paribu" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvExchangeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paribu"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvActiveAlerts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 aktif alarm"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSearchToggle"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="4dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:padding="0dp"
                        app:cornerRadius="10dp"
                        app:icon="@drawable/ic_search"
                        app:iconSize="18dp"
                        app:iconPadding="0dp"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFilter"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="4dp"
                        android:text="Tümü"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:paddingHorizontal="12dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="10dp"
                        app:icon="@drawable/ic_filter_list"
                        app:iconSize="14dp"
                        app:iconGravity="textStart"
                        app:iconPadding="4dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSort"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Fark %"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:paddingHorizontal="12dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="10dp"
                        app:icon="@drawable/ic_sort"
                        app:iconSize="14dp"
                        app:iconGravity="textStart"
                        app:iconPadding="4dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutSearchExpanded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp"
                android:visibility="gone"
                android:animateLayoutChanges="true">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxStrokeColor="@color/primary_color"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:hintTextColor="@color/primary_color"
                    app:startIconDrawable="@drawable/ic_search"
                    app:startIconTint="@color/primary_color"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/primary_color"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Coin ara..."
                        android:inputType="text"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutResultsInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@color/primary_color_light"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_info"
                    android:layout_marginEnd="6dp"
                    app:tint="@color/primary_color" />

                <TextView
                    android:id="@+id/tvResultsInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12 sonuçtan 5 tanesi gösteriliyor"
                    android:textColor="@color/primary_color"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-medium" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClearFilters"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="Temizle"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:minWidth="50dp"
                    android:paddingHorizontal="8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_clear"
                    app:iconSize="10dp"
                    app:iconPadding="2dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="@color/surface_variant">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Coin"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/tvHeaderExchange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Exchange"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="end" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Binance"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="end" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="Fark %"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="end" />

        <View
            android:layout_width="24dp"
            android:layout_height="1dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCoins"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        tools:listitem="@layout/item_coin" />

    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="32dp">

        <ImageView
            android:id="@+id/ivEmptyStateIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_search_off"
            android:alpha="0.5"
            android:layout_marginBottom="16dp"
            app:tint="@color/text_secondary" />

        <TextView
            android:id="@+id/tvEmptyStateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Henüz veri yok"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvEmptyStateMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servisi başlatın ve verilerin gelmesini bekleyin"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:gravity="center"
            android:lineSpacingExtra="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yeniden Dene"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_refresh"
            app:iconSize="18dp"
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </LinearLayout>

</LinearLayout>